<!DOCTYPE html>
<html {{ site.language_attributes }}>

<head>
  <meta charset="{{ site.charset }}">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ description }}">
  {{ function('wp_head') }}
</head>

<body class="{{ body_class }}" data-barba="wrapper">

  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">

</body>

</html>
{# Header Section #}
<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-6">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-800">
        {{ site.name }}
      </h1>
      <nav class="hidden md:flex space-x-6">
        <a href="{{ site.url }}" class="text-gray-600 hover:text-indigo-600 transition-colors">
          Home
        </a>
      </nav>
    </div>
  </div>
</header>

{# Main Content #}
<main class="container mx-auto px-4 py-12">
  {# Hero Section #}
  <div class="text-center mb-16">
    <h1 class="text-5xl font-extrabold text-gray-900 mb-4">
      {{ title }}
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      {{ description }}
    </p>
    <div class="mt-6 flex items-center justify-center space-x-2">
      <span class="inline-block px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-semibold">
        ✓ Twig Working
      </span>
      <span class="inline-block px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold">
        ✓ Tailwind Working
      </span>
    </div>
  </div>

  {# Features Grid #}
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
    {% for feature in features %}
    <div
      class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
      <div class="text-4xl mb-4">{{ feature.icon }}</div>
      <h3 class="text-xl font-bold text-gray-800 mb-2">
        {{ feature.title }}
      </h3>
      <p class="text-gray-600">
        {{ feature.description }}
      </p>
    </div>
    {% endfor %}
  </div>

  {# Code Example Section #}
  <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">
      Twig Syntax Examples
    </h2>

    <div class="space-y-6">
      {# Variables #}
      <div class="border-l-4 border-indigo-500 pl-4">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Variables</h3>
        <div class="bg-gray-50 p-4 rounded font-mono text-sm">
          <p class="text-gray-600">Site Name: <span class="text-indigo-600 font-bold">{{ site.name }}</span></p>
          <p class="text-gray-600">Site URL: <span class="text-indigo-600 font-bold">{{ site.url }}</span></p>
        </div>
      </div>

      {# Loops #}
      <div class="border-l-4 border-green-500 pl-4">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Loops</h3>
        <div class="bg-gray-50 p-4 rounded font-mono text-sm">
          <p class="text-gray-600 mb-2">Feature Count: {{ features|length }}</p>
          <ul class="list-disc list-inside text-gray-600">
            {% for feature in features %}
            <li>{{ loop.index }}. {{ feature.title }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>

      {# Filters #}
      <div class="border-l-4 border-purple-500 pl-4">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Filters</h3>
        <div class="bg-gray-50 p-4 rounded font-mono text-sm">
          <p class="text-gray-600">Uppercase: <span class="text-purple-600 font-bold">{{ title|upper }}</span></p>
          <p class="text-gray-600">Lowercase: <span class="text-purple-600 font-bold">{{ title|lower }}</span></p>
          <p class="text-gray-600">First 20 chars: <span class="text-purple-600 font-bold">{{ description|slice(0, 20)
              }}...</span></p>
        </div>
      </div>

      {# Conditionals #}
      <div class="border-l-4 border-yellow-500 pl-4">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Conditionals</h3>
        <div class="bg-gray-50 p-4 rounded font-mono text-sm">
          {% if features|length > 3 %}
          <p class="text-green-600 font-semibold">✓ We have {{ features|length }} features (more than 3)</p>
          {% else %}
          <p class="text-yellow-600 font-semibold">We have {{ features|length }} or fewer features</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  {# Tailwind CSS Examples #}
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">
      Tailwind CSS Examples
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg transition-colors">
        Primary Button
      </button>
      <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg transition-colors">
        Success Button
      </button>
      <button class="bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition-colors">
        Danger Button
      </button>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="h-20 bg-gradient-to-r from-blue-400 to-blue-600 rounded-lg"></div>
      <div class="h-20 bg-gradient-to-r from-green-400 to-green-600 rounded-lg"></div>
      <div class="h-20 bg-gradient-to-r from-purple-400 to-purple-600 rounded-lg"></div>
      <div class="h-20 bg-gradient-to-r from-pink-400 to-pink-600 rounded-lg"></div>
    </div>
  </div>
</main>

{# Footer #}
<footer class="bg-gray-800 text-white mt-16">
  <div class="container mx-auto px-4 py-8">
    <div class="text-center">
      <p class="text-gray-400">
        &copy; {{ "now"|date("Y") }} {{ site.name }}. Built with Timber, Twig, and Tailwind CSS.
      </p>
    </div>
  </div>
</footer>
</div>

{{ function('wp_footer') }}
</body>

</html>
